    </fo:declarations>

    <fo:page-sequence master-reference="diagram-page">
        <fo:flow flow-name="xsl-region-body">
            <fo:block>
                <fo:instream-foreign-object>

                    @svgCompactTree(title, sosaList, isEmbedded=true)

